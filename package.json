{
    "name": "vscode-gpm",
    "displayName": "gpm",
    "description": "Git Project Manager",
    "version": "0.10.0",
    "publisher": "axetroy",
    "engines": {
        "vscode": "^1.21.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/axetroy/vscode-gpm.git"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/axetroy/vscode-gpm/issues"
    },
    "homepage": "https://github.com/axetroy/vscode-gpm#readme",
    "keywords": [
        "git",
        "project",
        "manage",
        "gpm"
    ],
    "categories": [
        "Other"
    ],
    "icon": "resources/icon.png",
    "main": "./out/extension",
    "activationEvents": [
        "onView:gpmExplorer",
        "onCommand:gpm.add",
        "onCommand:gpm.refresh"
    ],
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "gpmExplorer",
                    "name": "GPM"
                }
            ]
        },
        "commands": [
            {
                "command": "gpm.refresh",
                "title": "Refresh Project",
                "category": "gpm",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "gpm.clearCache",
                "title": "Clear Cache",
                "category": "gpm",
                "icon": {
                    "light": "resources/light/clear_cache.svg",
                    "dark": "resources/dark/clear_cache.svg"
                }
            },
            {
                "command": "gpm.add",
                "title": "Add Project",
                "category": "gpm",
                "icon": {
                    "light": "resources/light/add.svg",
                    "dark": "resources/dark/add.svg"
                }
            },
            {
                "command": "gpm.openInCurrentWindow",
                "title": "Open in Current Window",
                "category": "gpm"
            },
            {
                "command": "gpm.openInNewWindow",
                "title": "Open in New Window",
                "category": "gpm"
            },
            {
                "command": "gpm.prune",
                "title": "Prune Project",
                "category": "gpm",
                "icon": {
                    "light": "resources/light/delete.svg",
                    "dark": "resources/dark/delete.svg"
                }
            },
            {
                "command": "gpm.star",
                "title": "Star",
                "category": "gpm"
            },
            {
                "command": "gpm.unstar",
                "title": "Unstar",
                "category": "gpm"
            },
            {
                "command": "gpm.clearStars",
                "title": "Clear Stars",
                "category": "gpm"
            },
            {
                "command": "gpm.remove",
                "title": "Remove Project",
                "category": "gpm"
            },
            {
                "command": "gpm.interruptCommand",
                "title": "Interrupt Current Running Command",
                "category": "gpm"
            },
            {
                "command": "gpm.list2remove",
                "title": "List Project to Remove",
                "category": "gpm"
            },
            {
                "command": "gpm.list2open",
                "title": "List Project to Open",
                "category": "gpm"
            },
            {
                "command": "gpm.list2openNew",
                "title": "List Project to Open in New Window",
                "category": "gpm"
            },
            {
                "command": "gpm.search",
                "title": "Search Project",
                "category": "gpm",
                "icon": {
                    "light": "resources/light/search.svg",
                    "dark": "resources/dark/search.svg"
                }
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "gpm.search",
                    "group": "navigation@1",
                    "when": "gpmInit && view == gpmExplorer"
                },
                {
                    "command": "gpm.add",
                    "group": "navigation@2",
                    "when": "gpmInit && view == gpmExplorer"
                },
                {
                    "command": "gpm.prune",
                    "group": "navigation@3",
                    "when": "gpmInit && view == gpmExplorer"
                },
                {
                    "command": "gpm.clearCache",
                    "group": "navigation@4",
                    "when": "gpmInit && view == gpmExplorer"
                },
                {
                    "command": "gpm.refresh",
                    "group": "navigation@5",
                    "when": "gpmInit && view == gpmExplorer"
                }
            ],
            "view/item/context": [
                {
                    "command": "gpm.openInCurrentWindow",
                    "group": "context",
                    "when": "gpmInit && view == gpmExplorer && viewItem == project"
                },
                {
                    "command": "gpm.openInCurrentWindow",
                    "group": "context",
                    "when": "gpmInit && view == gpmExplorer && viewItem == project.stared"
                },
                {
                    "command": "gpm.openInNewWindow",
                    "group": "context",
                    "when": "gpmInit && view == gpmExplorer && viewItem == project"
                },
                {
                    "command": "gpm.openInNewWindow",
                    "group": "context",
                    "when": "gpmInit && view == gpmExplorer && viewItem == project.stared"
                },
                {
                    "command": "gpm.remove",
                    "group": "context",
                    "when": "gpmInit && view == gpmExplorer && viewItem == project"
                },
                {
                    "command": "gpm.remove",
                    "group": "context",
                    "when": "gpmInit && view == gpmExplorer && viewItem == project.stared"
                },
                {
                    "command": "gpm.star",
                    "group": "context",
                    "when": "gpmInit && view == gpmExplorer && viewItem == project"
                },
                {
                    "command": "gpm.unstar",
                    "group": "context",
                    "when": "gpmInit && view == gpmExplorer && viewItem == project.stared"
                },
                {
                    "command": "gpm.clearStars",
                    "group": "context",
                    "when": "gpmInit && view == gpmExplorer && viewItem == star"
                }
            ],
            "commandPalette": [
                {
                    "command": "gpm.add",
                    "when": "gpmInit"
                },
                {
                    "command": "gpm.list2open",
                    "when": "gpmInit"
                },
                {
                    "command": "gpm.list2openNew",
                    "when": "gpmInit"
                },
                {
                    "command": "gpm.list2remove",
                    "when": "gpmInit"
                },
                {
                    "command": "gpm.prune",
                    "when": "gpmInit"
                },
                {
                    "command": "gpm.clearCache",
                    "when": "gpmInit"
                },
                {
                    "command": "gpm.refresh",
                    "when": "gpmInit"
                },
                {
                    "command": "gpm.clearStars",
                    "when": "gpmInit"
                },
                {
                    "command": "gpm.search",
                    "when": "gpmInit"
                },
                {
                    "command": "gpm.interruptCommand",
                    "when": "gpmInit"
                },
                {
                    "command": "gpm.remove",
                    "when": "never"
                },
                {
                    "command": "gpm.openInCurrentWindow",
                    "when": "never"
                },
                {
                    "command": "gpm.openInNewWindow",
                    "when": "never"
                },
                {
                    "command": "gpm.star",
                    "when": "never"
                },
                {
                    "command": "gpm.unstar",
                    "when": "never"
                }
            ]
        },
        "configuration": {
            "title": "GPM",
            "properties": {
                "gpm.rootPath": {
                    "type": "string",
                    "default": "$HOME/gpm",
                    "description": "Git Package Root Path, default: $HOME/gpm, support other environment variables, eb. $GOPATH"
                },
                "gpm.isAutoRunHook": {
                    "type": "boolean",
                    "default": false,
                    "description": "WARNING: custom hook may be dangerous. risk on your own."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./ && npm run lint",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "lint": "tslint -p ./ -c tslint.json",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
    },
    "devDependencies": {
        "@types/fs-extra": "^5.0.1",
        "@types/mocha": "^2.2.42",
        "@types/node": "^9.4.7",
        "@types/shelljs": "^0.7.8",
        "conventional-changelog-cli": "^1.3.16",
        "tslint": "^5.8.0",
        "tslint-config-prettier": "^1.10.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "@axetroy/walk": "^0.1.0",
        "fs-extra": "^5.0.0",
        "git-url-parse": "^8.2.0",
        "shelljs": "^0.8.1",
        "unique-string": "^1.0.0"
    }
}
