{
  "name": "vscode-gpm",
  "displayName": "gpm",
  "description": "Git Project Manager",
  "version": "0.1.2",
  "publisher": "axetroy",
  "engines": {
    "vscode": "^1.21.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/axetroy/vscode-gpm.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/axetroy/vscode-gpm/issues"
  },
  "homepage": "https://github.com/axetroy/vscode-gpm#readme",
  "keywords": ["git", "project", "manage", "gpm"],
  "categories": ["Other"],
  "icon": "resources/icon.png",
  "main": "./out/extension",
  "activationEvents": [
    "onView:gpmExplorer",
    "onCommand:gpm.addProject",
    "onCommand:gpm.refreshProject"
  ],
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "gpmExplorer",
          "name": "GPM"
        }
      ]
    },
    "commands": [
      {
        "command": "gpm.refreshProject",
        "title": "refresh project",
        "category": "gpm",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "gpm.addProject",
        "title": "add project",
        "category": "gpm",
        "icon": {
          "light": "resources/light/add.svg",
          "dark": "resources/dark/add.svg"
        }
      },
      {
        "command": "gpm.removeProject",
        "title": "remove project",
        "category": "gpm",
        "icon": {
          "light": "resources/light/delete.svg",
          "dark": "resources/dark/delete.svg"
        }
      },
      {
        "command": "gpm.openInCurrentWindow",
        "title": "open in current window",
        "category": "gpm",
        "icon": {
          "light": "resources/light/delete.svg",
          "dark": "resources/dark/delete.svg"
        }
      },
      {
        "command": "gpm.openInNewWindow",
        "title": "open in new window",
        "category": "gpm"
      },
      {
        "command": "gpm.pruneProject",
        "title": "prune project",
        "category": "gpm"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "gpm.addProject",
          "group": "navigation@1",
          "when": "view == gpmExplorer"
        },
        {
          "command": "gpm.pruneProject",
          "group": "navigation@2",
          "when": "view == gpmExplorer"
        },
        {
          "command": "gpm.refreshProject",
          "group": "navigation@3",
          "when": "view == gpmExplorer"
        }
      ],
      "view/item/context": [
        {
          "command": "gpm.openInCurrentWindow",
          "group": "context",
          "when": "view == gpmExplorer && viewItem == project"
        },
        {
          "command": "gpm.openInNewWindow",
          "group": "context",
          "when": "view == gpmExplorer && viewItem == project"
        },
        {
          "command": "gpm.removeProject",
          "group": "context",
          "when": "view == gpmExplorer && viewItem == project"
        }
      ],
      "commandPalette": [
        {
          "command": "gpm.removeProject",
          "when": "never"
        },
        {
          "command": "gpm.openInCurrentWindow",
          "when": "never"
        },
        {
          "command": "gpm.openInNewWindow",
          "when": "never"
        }
      ]
    },
    "configuration": {
      "title": "GPM",
      "properties": {
        "gpm.rootPath": {
          "type": "string",
          "default": "~/gpm",
          "description": "Git Package Root Path, default: $HOME/gpm"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run tslint",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "lint": "tslint -p ./ -c tslint.json",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.1",
    "@types/mocha": "^2.2.42",
    "@types/node": "^9.4.7",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.10.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.6"
  },
  "dependencies": {
    "@axetroy/walk": "^0.1.0",
    "cross-spawn": "^6.0.5",
    "fs-extra": "^5.0.0",
    "git-url-parse": "^8.2.0",
    "unique-string": "^1.0.0",
    "which": "^1.3.0"
  }
}
