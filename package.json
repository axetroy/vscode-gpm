{
  "name": "vscode-gpm",
  "displayName": "gpm",
  "description": "vscode extension for gpm",
  "version": "0.0.1",
  "publisher": "gpm",
  "engines": {
    "vscode": "^1.21.0"
  },
  "categories": ["Other"],
  "main": "./out/extension",
  "activationEvents": [
    "onView:gpmExplorer",
    "onCommand:gpm.addProject",
    "onCommand:gpm.refreshProject"
  ],
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "gpmExplorer",
          "name": "GPM"
        }
      ]
    },
    "commands": [
      {
        "command": "gpm.refreshProject",
        "title": "refresh project",
        "category": "gpm",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "gpm.addProject",
        "title": "add project",
        "category": "gpm"
      },
      {
        "command": "gpm.openProject",
        "title": "open project",
        "category": "gpm"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "gpm.refreshProject",
          "group": "navigation@1",
          "when": "view == gpmExplorer"
        }
      ],
      "view/item/context": [
        {
          "command": "gpm.openProject",
          "group": "context",
          "when": "view == gpmExplorer && viewItem == project"
        }
      ],
      "commandPalette": [
        {
          "command": "gpm.refreshProject",
          "when": "never"
        },
        {
          "command": "gpm.addProject",
          "when": "never"
        },
        {
          "command": "gpm.openProject",
          "when": "never"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.1",
    "@types/mocha": "^2.2.42",
    "@types/node": "^9.4.7",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.6"
  },
  "dependencies": {
    "fs-extra": "^5.0.0",
    "which": "^1.3.0"
  }
}
